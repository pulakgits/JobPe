<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/companyLogo"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/imageLayout"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/jobHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TCS Admin Off Campus Hiring 2023"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/postLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobHeadline"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post : "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/jobRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiple Role"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postLayout"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qualification :"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/jobQualify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Commerce graduate"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qualification"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Date :"
                        android:textColor="@color/textColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastDateApply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20th June, 2023"
                        android:textColor="@color/textColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


</androidx.cardview.widget.CardView>